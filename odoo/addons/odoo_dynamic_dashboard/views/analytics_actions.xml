        <field name="name">Analytics Configuration</field>
        <field name="res_model">analytics.dashboard</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your analytics dashboards
            </p>
            <p>
                Create and customize dashboards for different business areas.
            </p>
        </field>
    </record>
</odoo>
